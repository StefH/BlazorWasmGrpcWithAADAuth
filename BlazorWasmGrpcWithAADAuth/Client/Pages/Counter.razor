@page "/counter"
<h1>Counter</h1>

<div>

    <p>Current count: @currentCount</p>

    <button class="btn btn-primary" @onclick="IncrementCount" disabled="@IsStarted">Start</button>
    <button class="btn btn-primary" @onclick="StopCount" disabled="@(!IsStarted)">Stop</button>

    <p>Error = <pre>@Error</pre></p>

</div>